<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ArtistsInfo">

    <TextView
        android:id="@+id/btnfind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Δώσε το όνομα του καλιτέχνη/μπάντας για τον/την οποία θες να μάθεις:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/editTextArtist"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextArtist"
        android:layout_width="372dp"
        android:layout_height="39dp"
        android:layout_marginTop="68dp"
        android:ems="10"
        android:hint="Δώσε όνομα"
        android:inputType="none|text"
        android:singleLine="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnfind" />

    <Button
        android:id="@+id/btnfind1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Ψάξε"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="@+id/editTextArtist"
        app:layout_constraintTop_toBottomOf="@+id/editTextArtist" />

    <ScrollView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnfind1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

         <TextView
             android:id="@+id/artistInfo"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

         </TextView>
    </ScrollView>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="83dp"
        android:layout_height="84dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.057"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.259"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>